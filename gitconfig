[alias]
	ci = commit
	st = status
	co = checkout
	staged = diff --cached
        uncommit = reset --soft HEAD^
        wdiff = diff --color-words
        # Display nice sumary when doing a pull --rebase
        up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
